function gQ = gradientCost_BB(n, dtau, cn, u, M, R, I, g, l, a_max, k, x0, ep)


gQ = zeros(length(x0), 1);
Q = q_cost_BB(h0, tau1, tau2, u0, M, R, I, g, l, a_max, x0);

for i = 1:length(x0)
   x0_ = x0;
   x0_(i) = x0(i) + ep;
   Q_ = q_cost_BB(n, dtau, cn, u, M, R, I, g, l, a_max, k, x0_);
   gQ(i) = (Q_ - Q)/ep;
end